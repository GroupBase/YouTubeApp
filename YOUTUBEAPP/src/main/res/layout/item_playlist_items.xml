<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/video_item_selector"
    android:id="@+id/ln_item"
    android:layout_marginBottom="@dimen/margin_4"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_thumbnails"
            android:background="@color/black"
            android:layout_width="@dimen/view_100"
            android:layout_height="@dimen/view_100"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="@dimen/view_32"
            android:layout_height="@dimen/view_32"
            android:layout_gravity="center"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_play" />
        <TextView
            android:id="@+id/watched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/watched"
            android:visibility="invisible"
            android:gravity="top|left"
            android:layout_marginTop="@dimen/margin_5"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            android:textColor="@color/text_count_color"/>
    </FrameLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxLines="3"
        android:text="TextView"
        android:layout_marginLeft="@dimen/margin_10"
        android:textColor="@color/text_title_color"
        android:textSize="@dimen/text_size"
        tools:text="title\ntitla\n" />
</LinearLayout>